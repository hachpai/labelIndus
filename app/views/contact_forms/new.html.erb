<div id = "contactForm">
<%= form_for @contact_form do |f| %>

<div class="field_margined field">
	<p>message</p>
	<%= f.text_area :message %><br /><br>
</div>
<div class="field_margined field">
	<p><%= f.label :email %></p>
	<%= f.email_field :email, :required => true %>
	<br /><br><br>
</div>
<div class="field">
<%= f.submit "", :id => "send-button" %>
</div>

<% end %>
</div>